---
export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="stylesheet" href="https://use.typekit.net/ufz1kxg.css" />
        <title>{title}</title>

        <script>
            window.addEventListener("load", () => document.body.classList.remove("preload"));
        </script>
    </head>

    <body class="preload">
        <main>
            <slot />
        </main>
        <style lang="scss" is:global>
            :root {
                --font-size-base: 1rem;
                --font-size-md: 1.25rem;
                --font-size-lg: 1.75rem;
                --font-size-xl: 3rem;

                --white: hsla(0, 0%, 100%, 1);
                --lavender-blush: hsla(342, 32%, 92%, 1);
                --fiery-rose: hsla(353, 88%, 68%, 1);
                --fiery-rose-dark: hsla(353, 88%, 58%, 1);
                --medium-purple: hsla(249, 100%, 75%, 1);
                --black-pearl: hsla(200, 6%, 10%, 1);
                --raisin-black: hsla(240, 7%, 19%, 1);
                --black-coffee: hsl(266, 11%, 24%);
                --topaz: hsl(267, 4%, 51%);

                --color-bg: var(--black-pearl);
                --color-text: var(--topaz);
                --color-text-important: var(--white);
                --primary-accent: var(--fiery-rose);
                --secondary-accent: var(--medium-purple);
            }

            * {
                box-sizing: border-box;
            }

            html {
                font-family: ibm-plex-sans, sans-serif;
                font-size: var(--font-size-base);
                color: var(--color-text);
                background-color: var(--color-bg);
            }

            body {
                margin: 0;
            }

            main {
                margin: auto;
                padding: 2em;
                max-width: 75ch;
            }

            h1 {
                font-size: var(--font-size-xl);
                color: var(--color-text-important);
                font-weight: 800;
                margin: 0 0 0.5rem 0;
            }

            h2 {
                font-size: var(--font-size-lg);
                color: var(--color-text-important);
                font-weight: 800;
                margin: 0 0 0.5rem 0;
            }

            h3 {
                font-size: var(--font-size-md);
                font-weight: 600;
                margin: 0 0 0.5rem 0;
            }

            h4 {
                font-size: var(--font-size-base);
                font-weight: 600;
                color: var(--color-text-important);
                margin: 0 0 0.5rem 0;
            }

            b {
                color: var(--color-text-important);
                font-weight: 600;
            }

            em {
                color: var(--color-text-important);
                font-style: normal;
            }

            a {
                color: inherit;
                transition: 200ms color;

                &:hover,
                &:active {
                    color: var(--primary-accent);
                }
            }

            .preload * {
                -webkit-transition: none !important;
                -moz-transition: none !important;
                -ms-transition: none !important;
                -o-transition: none !important;
            }
        </style>
    </body>
</html>
