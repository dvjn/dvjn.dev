---
import { Icon } from "astro-icon/components";

export interface Props {
    url: string;
}

const { url } = Astro.props;
---

<div>
    <a href={url}><span>Show More</span><Icon name="radix-icons:arrow-right" /></a>
</div>

<style lang="scss">
    div {
        margin-top: 0.5rem;
        display: flex;
        justify-content: flex-end;

        a {
            display: flex;
            text-decoration: none;
            align-items: center;
            font-size: var(--font-size-sm);
        }

        [astro-icon] {
            height: 1.25em;
            margin-left: 0.5rem;
        }
    }
</style>
