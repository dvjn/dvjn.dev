---
export interface Props {
    columns?: number;
}

const { columns = 2 } = Astro.props;
---

<div>
    <slot />
</div>

<style lang="scss" define:vars={{ columns }}>
    div {
        display: grid;
        grid-template-columns: repeat(var(--columns), 1fr);
        margin: -0.5rem;

        & > :global(*) {
            margin: 0.5rem;
        }
    }
</style>
